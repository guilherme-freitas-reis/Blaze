generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id @default(uuid())
  auth0Id   String   @unique
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  wallet    Wallet?
}

model Wallet {
  id        String      @id @default(uuid())
  balance   Float         @default(0)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      User        @relation(fields: [userId], references: [id])
  userId    String      @unique
  Deposit   Deposit[]
  Withdraw  Withdraw[]
  MineMatch MineMatch[]
  Bet       Bet[]
}

model Deposit {
  id        String   @id @default(uuid())
  amount    Float
  createdAt DateTime @default(now())
  status    String
  updatedAt DateTime @updatedAt
  wallet    Wallet   @relation(fields: [walletId], references: [id])
  walletId  String

  @@index([walletId])
}

model Withdraw {
  id        String   @id @default(uuid())
  amount    Float
  createdAt DateTime @default(now())
  status    String
  updatedAt DateTime @updatedAt
  wallet    Wallet   @relation(fields: [walletId], references: [id])
  walletId  String

  @@index([walletId])
}

model Bet {
  id        String   @id @default(uuid())
  amount    Float
  createdAt DateTime @default(now())
  game      String
  status    String
  updatedAt DateTime @updatedAt
  wallet    Wallet   @relation(fields: [walletId], references: [id])
  walletId  String

  @@index([walletId])
}

model MineMatch {
  id         String      @id @default(uuid())
  betAmount  Float
  createdAt  DateTime    @default(now())
  endedAt    DateTime?
  updatedAt  DateTime    @updatedAt
  wallet     Wallet      @relation(fields: [walletId], references: [id])
  walletId   String
  mines      Int
  gameResult String      @db.Text
  status     String?
  MineRounds MineRound[]

  @@index([walletId])
}

model MineRound {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  position    Int
  match       MineMatch @relation(fields: [mineMatchId], references: [id])
  mineMatchId String

  @@index([mineMatchId])
}
